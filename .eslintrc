{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended"
  ],
  "rules": {
    "semi": "error",
    "indent": [
      "error",
      2
    ],
    "space-in-parens": [
      "error",
      "never"
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}